@page "/admin-favorites"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@using AntDesign
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>管理员收藏夹 - SMS平台</PageTitle>

@if (isLoading)
{
    <div style="display: flex; justify-content: center; align-items: center; height: 400px;">
        <AntDesign.Spin Size="@AntDesign.SpinSize.Large" />
        <span style="margin-left: 16px; color: #666;">正在加载数据...</span>
    </div>
}
else if (!isAuthenticated)
{
    <div style="display: flex; justify-content: center; align-items: center; height: 400px;">
        <div style="text-align: center;">
            <AntDesign.Alert Type="@AntDesign.AlertType.Error" 
                           Message="认证失败" 
                           Description="您没有权限访问此页面或登录已过期，正在跳转到登录页面..." 
                           ShowIcon="true" />
        </div>
    </div>
}
else if (isAuthenticated)
{

<h1 style="color: #333; margin-bottom: 30px; text-align: center; font-weight: 600;">我的收藏</h1>

<div style="padding: 0 24px;">
    @if (favorites.Count == 0)
    {
        <div style="text-align: center; margin-top: 50px;">
            <AntDesign.Empty>
                <DescriptionTemplate>
                    <div style="color: #999; font-size: 18px;">
                        <Icon Type="file-text" style="font-size: 48px; color: #d9d9d9;" />
                        <p style="margin-top: 12px;">您还没有收藏任何功能</p>
                        <p style="font-size: 14px;">前往<a href="/admin-directory" style="color: #1890ff; text-decoration: none;">功能目录</a>收藏您常用的功能吧！</p>
                    </div>
                </DescriptionTemplate>
            </AntDesign.Empty>
        </div>
    }
    else
    {
        <AntDesign.Row Gutter="24" style="justify-content: center;">
            @foreach (var item in favorites)
            {
                @if (favoriteItems.ContainsKey(item))
                {
                    var fav = favoriteItems[item];
                    <AntDesign.Col Xs="24" Sm="12" Md="8" style="margin-bottom: 24px;">
                        <a href="@fav.Url" style="text-decoration: none;">
                            <AntDesign.Card Hoverable="true" style="margin-bottom: 24px;">
                                <Body>
                                    <div style="display: flex; align-items: center;">
                                        <div @onclick="@((e) => RemoveFavorite(item))" @onclick:preventDefault="true" @onclick:stopPropagation="true"
                                             style="font-size: 32px; cursor: pointer; color: #ffd700; transition: color 0.3s ease; margin-right: 16px;"
                                             title="取消收藏">
                                            ★
                                        </div>
                                        <div style="flex: 1; display: flex; align-items: center;">
                                            <Icon Type="@fav.Icon" Theme="@IconThemeType.Outline" style="font-size: 2rem; margin-right: 12px; color: #1890ff;" />
                                            <h4 style="margin: 0;">@fav.Title</h4>
                                        </div>
                                    </div>
                                </Body>
                            </AntDesign.Card>
                        </a>
                    </AntDesign.Col>
                }
            }
        </AntDesign.Row>
    }
</div>
}

@code {
    private bool isLoading = true;
    private List<string> favorites = new List<string>();
    private bool isAuthenticated = false;
    private string currentUser = string.Empty;
    private string userRole = string.Empty;
    
    private readonly Dictionary<string, FavoriteItem> favoriteItems = new Dictionary<string, FavoriteItem>
    {
        ["students"] = new FavoriteItem { Icon = "idcard", Title = "学生管理", Url = "/admin-students" },
        ["teachers"] = new FavoriteItem { Icon = "read", Title = "教师管理", Url = "/admin-teachers" },
        ["courses"] = new FavoriteItem { Icon = "book", Title = "课程管理", Url = "/admin-courses" },
        ["enrollments"] = new FavoriteItem { Icon = "team", Title = "选课管理", Url = "/admin-enrollment-management" }
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckAuthentication();
            if (isAuthenticated)
            {
                await LoadFavorites();
                
                // 监听localStorage变化
                await JSRuntime.InvokeVoidAsync("eval", @"
                    window.addEventListener('storage', function(e) {
                        if (e.key === 'favorites') {
                            window.location.reload();
                        }
                    });
                ");
            }
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CheckAuthentication()
    {
        try
        {
            currentUser = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "currentUser") ?? string.Empty;
            userRole = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userRole") ?? string.Empty;
            
            if (string.IsNullOrEmpty(currentUser))
            {
                isAuthenticated = false;
                return;
            }
            
            // 检查用户角色是否为管理员
            if (userRole != "2")
            {
                isAuthenticated = false;
                return;
            }
            
            isAuthenticated = true;
        }
        catch (Exception ex)
        {
            // 记录异常信息以便调试
            Console.WriteLine($"管理员认证异常: {ex.Message}");
            isAuthenticated = false;
        }
    }

    private async Task LoadFavorites()
    {
        try
        {
            var favoritesJson = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "favorites");
            if (!string.IsNullOrEmpty(favoritesJson) && favoritesJson != "null" && favoritesJson != "undefined")
            {
                favorites = System.Text.Json.JsonSerializer.Deserialize<List<string>>(favoritesJson) ?? new List<string>();
            }
            else
            {
                favorites = new List<string>();
            }
        }
        catch
        {
            favorites = new List<string>();
        }
    }

    private async Task RemoveFavorite(string item)
    {
        favorites.Remove(item);
        var favoritesJson = System.Text.Json.JsonSerializer.Serialize(favorites);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "favorites", favoritesJson);
        
        // 触发存储事件
        await JSRuntime.InvokeVoidAsync("eval", $@"
            window.dispatchEvent(new StorageEvent('storage', {{
                key: 'favorites',
                newValue: '{favoritesJson}'
            }}));
        ");
        
        StateHasChanged();
    }

    public class FavoriteItem
    {
        public string Icon { get; set; } = "";
        public string Title { get; set; } = "";
        public string Url { get; set; } = "";
    }
}
